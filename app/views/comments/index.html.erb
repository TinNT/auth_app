<h1>Listing comments for <i> <%= h @post.title %> </i></h1>

<table border="1">
  <tr>
    <th>Author</th>
    <th>Body</th>
    <th>Creator</th>
    <th>Created at</th>
    <th colspan="3">Action</th>
  </tr>

  <% @comments.each do |comment| %>
    <tr>
      <td><%=h comment.user.email %></td>
      <td><%=h comment.body %></td>
      <td><%=h comment.user.email %></td>
      <td><%=nice_date comment.created_at %></td>
      <td><%= link_to 'Show', post_comment_path(@post,comment) %></td>
      <% if comment.editable?(current_user.id) %>
        <td><%= link_to 'Edit', edit_post_comment_path(@post,comment) %></td>
        <td><%= link_to 'Destroy', post_comment_path(@post,comment), :confirm => 'Are you sure?', :method => :delete %></td>
      <%end%>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'New comment', new_post_comment_path %>
<br/>
<%= link_to 'Show Post', post_path(@post) %>